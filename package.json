{
  "name": "mgsisk.github.io",
  "version": "1.0.5",
  "description": "Hi, I'm Mike",
  "respository": "mgsisk/mgsisk.github.io",
  "author": "mgsisk <me@mgsisk.com>",
  "license": "ISC",
  "scripts": {
    "clean": "find . -name '*.DS_Store' -type f -delete; rm -rf _site",
    "make": "node scripts.js watch",
    "make:css": "node scripts.js makeCss",
    "make:img": "imageoptim -a 'srv/**/*.jpg' 'srv/**/*.png'",
    "prepare": "bundle",
    "prepare:atom": "apm install --package-file Atomfile",
    "prepare:brew": "brew bundle",
    "start": "bundle exec jekyll serve",
    "test": "npm run test:css && npm run test:js && npm run test:json && npm run test:md && npm run test:yml",
    "test:css": "stylelint --config .stylelintrc.js '_css/**/*.css'",
    "test:js": "eslint -c .eslintrc.js '.?*.js'",
    "test:json": "find . \\( -name '*.json' -o -name '.babelrc' -o -name '.markdownlintrc' \\) ! -path '*/node_modules/*' | xargs -L1 jsonlint -q",
    "test:md": "markdownlint -c .markdownlintrc '*.md' '_pages/**/*.md' '_includes/**/*.md'",
    "test:yml": "find . -name '*.yml' ! -path '*/node_modules/*' | xargs -L1 js-yaml",
    "version": "git add --all",
    "postversion": "git push --follow-tags"
  },
  "devDependencies": {
    "chokidar": "^2.0.3",
    "cssnano": "^3.10.0",
    "eslint": "^4.19.1",
    "fast-glob": "^2.2.2",
    "imageoptim-cli": "^2.0.2",
    "js-yaml": "^3.13.1",
    "jsonlint": "^1.6.3",
    "markdownlint-cli": "^0.10.0",
    "postcss": "^6.0.22",
    "postcss-cssnext": "^3.1.0",
    "postcss-easings": "^1.0.1",
    "postcss-import": "^11.1.0",
    "postcss-short": "^4.1.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1"
  }
}
